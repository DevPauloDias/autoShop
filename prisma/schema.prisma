generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(50)
  email    String @db.VarChar(50)
  password String @db.VarChar(200)

  @@map("usuarios")
}

model Vehicle {
  id    Int    @id() @default(autoincrement())
  model String
  brand String
  year  String
  color String
  km    Int

  @@map("veiculos")
}

model Match {
  vehicleId Int      @id @default(autoincrement())
  ownerId   Int
  buyerId   Int
  dateSend  DateTime
  dateMatch DateTime

  @@map("propostas")
}
